<h1>Pets#index</h1>
<% if policy(Pet).create? %>
  <%= link_to 'Add Pet', new_pet_path %>
<% end %>
<ul class="cards">
  <% @pets.each do |pet| %>
  <li class="card" style="background-image: url('https://source.unsplash.com/random %>')">
    <h2><%= link_to pet.name, pet %></h2>
  </li>
  <% end %>
</ul>
