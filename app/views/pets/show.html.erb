<h1>Pets#show</h1>

<div>
  <h2 style="background-image: url('https://source.unsplash.com/random')"><%= @pet.name %></h2>
  <div class = "container">
    <p><%= @pet.specie %></p>
    <p><%= @pet.size %></p>
    <p><%= @pet.description %></p>
    <% if policy(Request.new(pet: @pet, user: current_user)).create? %>
      <%= link_to "Request this Dog", pet_requests_path(@pet), method: :post %>
    <% end %>
  </div>
  <div class="container">
    <% if policy(@pet).edit? %>
    <%= link_to "Update", edit_pet_path(@pet) %>
  <% end %>
  </div>
  <div class="container">
    <% if policy(@pet).destroy? %>
      <%= link_to pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <p>Remove from the list <i class="fas fa-trash text-dark"></i></p>
    <% end %>
  <% end %>
  </div>
  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<%= link_to "Back to Pet-list", pets_path %>
