<div class="container">
  <h1><%= @pet.name %> Page</h1>
  <br>
  <%= render "pets/image", pet: @pet %>

  <div class = "container">
    <p>Specie: <%= @pet.specie %></p>
    <p>Size: <%= @pet.size %></p>
    <p>Description: <%= @pet.description %></p>
    <% if policy(Request.new(pet: @pet, user: current_user)).create? %>
      <%= link_to "Request this Pet", pet_requests_path(@pet),class: "btn btn-flat", method: :post %>
    <% end %>
  </div>
</div>
<div class="container">
  <% if policy(@pet).edit? %>
    <%= link_to "Update", edit_pet_path(@pet) %>
  <% end %>
</div>
<div class="container">
  <% if policy(@pet).destroy? %>
    <%= link_to pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <p>Remove from the list <i class="fas fa-trash text-dark"></i></p>
    <% end %>
  <% end %>
</div>
<div class="container">
  <%= link_to "Back to Pet-list", pets_path, class: "btn btn-flat" %>
</div>
