<div class="container">
  <h1><%= @pet.name %> Page</h1><br>
  <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1560743641-3914f2c45636?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=633&q=80)">
    <h2> <%= @pet.name %></h2>
  </div>
  <div class = "container">
    <p>Specie: <%= @pet.specie %></p>
    <p>Size: <%= @pet.size %></p>
    <p>Description: <%= @pet.description %></p>
    <% if policy(Request.new(pet: @pet, user: current_user)).create? %>
      <%= link_to "Request this Pet", pet_requests_path(@pet),class: "btn btn-flat", method: :post %>
    <% end %>
  </div>
  <div class="container">
    <% if policy(@pet).edit? %>
    <%= link_to "Update", edit_pet_path(@pet) %>
  <% end %>
  </div>
  <div class="container">
    <% if policy(@pet).destroy? %>
      <%= link_to pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <p>Remove from the list <i class="fas fa-trash text-dark"></i></p>
    <% end %>
  <% end %>
  </div>
  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<div class="container">
  <%= link_to "Back to Pet-list", pets_path, class: "btn btn-flat" %>
</div>
