<%= simple_form_for(@pet) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.input :address %>
    <%= f.input :specie %>
    <%= f.input :size %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , class: "btn btn-flat-log"%>
  </div>
  <% end %>