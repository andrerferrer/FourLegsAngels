<div class="container">
  <h2>My Pet's Requests:</h2>
  <ul>
    <% @user_pets_requests.each do |my_pets_request| %>
      <% if policy(my_pets_request).index? %>
      <% status_output = my_pets_request.status ? "Request approved" : "Pending approval" %>
        <li> <%= my_pets_request.user.email %> - <%= link_to my_pets_request.pet.name, pet_path(my_pets_request.pet_id) %> - Status: <%= status_output %> - <%= link_to "Update", request_path(my_pets_request),class: "btn btn-flat", method: :patch %></li>
      <% end%>
    <% end%>
  </ul>
  <h2>My Requests:</h2>
  <ul>
    <% @requests.each do |request| %>
      <% if policy(request).index? %>
        <% status_output = request.status ? "Request approved" : "Pending approval" %>
        <li><%= request.user.email %> - <%= link_to request.pet.name, pet_path(request.pet_id) %> - Status: <%= status_output %></li>
      <% end%>
    <% end%>
  </ul>
</div>
<div class="p-4">
  <%= link_to "Back to Pets", pets_path, class: "btn btn-dark" %>
</div>
